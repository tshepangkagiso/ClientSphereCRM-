@model Client
<div class="container mt-5">
    <h2 class="mb-4">Client Form</h2>

    <form asp-action="Save" method="post" enctype="multipart/form-data">
        <!-- Hidden field for ClientID -->
        <input type="hidden" asp-for="@Model.ClientID" />

        <!-- Title -->
        <div class="form-group">
            <label asp-for="@Model.TitleID">Title</label>
            <select asp-for="@Model.TitleID" class="form-control" required>
                <option value="">Select Title</option>
                <option value="1">Mr.</option>
                <option value="2">Mrs.</option>
                <option value="3">Miss.</option>
                <option value="4">Dr.</option>
                <option value="5">Prof.</option>
            </select>
        </div>

        <!-- First Name -->
        <div class="form-group">
            <label asp-for="@Model.ClientName">First Name</label>
            <input asp-for="@Model.ClientName" class="form-control" required />
            <span asp-validation-for="@Model.ClientName" class="text-danger"></span>
        </div>

        <!-- Surname -->
        <div class="form-group">
            <label asp-for="@Model.ClientSurname">Surname</label>
            <input asp-for="@Model.ClientSurname" class="form-control" required />
            <span asp-validation-for="@Model.ClientSurname" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group">
            <label asp-for="@Model.ClientEmail">Email</label>
            <input asp-for="@Model.ClientEmail" type="email" class="form-control" required />
            <span asp-validation-for="@Model.ClientEmail" class="text-danger"></span>
        </div>

        <!-- Contact Number -->
        <div class="form-group">
            <label asp-for="@Model.ClientContactNumber">Contact Number</label>
            <input asp-for="@Model.ClientContactNumber" type="tel" class="form-control" required />
            <span asp-validation-for="@Model.ClientContactNumber" class="text-danger"></span>
        </div>

        <!-- Address -->
        <div class="form-group">
            <label asp-for="@Model.ClientAddress">Address</label>
            <textarea asp-for="@Model.ClientAddress" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="@Model.ClientAddress" class="text-danger"></span>
        </div>

        <!-- Type -->
        <div class="form-group">
            <label asp-for="@Model.TypeID">Client Type</label>
            <select asp-for="@Model.TypeID" class="form-control" required>
                <option value="">Select Type</option>
                <option value="1">New Client</option>
                <option value="2">Important Client</option>
                <option value="3">Super Client</option>
                <option value="4">Client Removed</option>
            </select>
            <span asp-validation-for="@Model.TypeID" class="text-danger"></span>
        </div>

        <!-- Image Upload -->
        <div class="form-group">
            <label>Profile Image</label>
            <input type="file" name="ProfileImage" class="form-control-file" accept="image/*" />
            <div class="mt-2">
                <img src="@Model.ClientProfilePicture" alt="Client Image" class="img-thumbnail" style="width: 100px; height: 100px;" />
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-3">
            <!-- Update Button -->
            <button type="submit" class="btn btn-primary">Update</button>

            <!-- Delete Button -->
            <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this client?');" style="display: inline;">
                <input type="hidden" asp-for="ClientID" />
                <button type="submit" class="btn btn-danger ml-2">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
        </div>
    </form>
</div>